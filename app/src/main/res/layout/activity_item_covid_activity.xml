<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#E6E6E6"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemProvinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jawa Barat"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/kasus"
            android:layout_below="@id/itemProvinsi"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Jumlah kasus : "/>
        <TextView
            android:id="@+id/sembuh"
            android:layout_below="@id/kasus"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Jumlah sembuh : "/>
        <TextView
            android:id="@+id/dirawat"
            android:layout_below="@id/sembuh"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Jumlah dirawat : "/>
        <TextView
            android:id="@+id/meninggal"
            android:layout_below="@id/dirawat"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Jumlah meninggal : "/>
    </LinearLayout>

</androidx.cardview.widget.CardView>